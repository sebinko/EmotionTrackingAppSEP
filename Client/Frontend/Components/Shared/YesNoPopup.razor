<div class="modal fade" id="@ModalId" tabindex="-1" aria-labelledby="yesNoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="yesNoModalLabel">@Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        @Message
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        <button type="button" class="btn btn-primary" @onclick="OnYes">Yes</button>
      </div>
    </div>
  </div>
</div>

@code {
  [Parameter] public string Title { get; set; }
  [Parameter] public string Message { get; set; }
  [Parameter] public EventCallback OnYes { get; set; }
  [Parameter] public string ModalId { get; set; } = "yesNoModal";
}
<div class="modal fade" id="okModal" tabindex="-1" aria-labelledby="okModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="okModalLabel">@Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        @Message
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="OnOk">OK</button>
      </div>
    </div>
  </div>
</div>

@code {
  [Parameter] public string Title { get; set; }
  [Parameter] public string Message { get; set; }
  [Parameter] public EventCallback OnOk { get; set; }
}